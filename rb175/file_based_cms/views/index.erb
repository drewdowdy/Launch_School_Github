<!doctype html>
<html lang="en-US">
  <head>
    <meta charset="UTF-8">
  </head>
  <body>
    <main>
      <% if session[:error] %>
        <div class="flash error">
          <p><%= session.delete(:error) %></p>
        </div>
      <% end %>

      <ul>
        <% @files.each do |file| %>
          <li><a href="/<%= file %>"><%= file %></a></li>
          <input type="button" value="Edit">
        <% end %>
      </ul>
    </main>
  </body>
</html>